<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/cerceve_cizgisi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <TextView
        android:id="@+id/recycler_row_kullanici_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kullanici emaili"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:textColor="@color/red"
        >
    </TextView>

    <ImageView
        android:layout_width="398dp"
        android:layout_height="372dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_launcher_background"
        android:layout_margin="5dp"
        android:id="@+id/recycler_row_imageview"
        >
    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kullanıcı Yorumu"
        android:textSize="18sp"
        android:textColor="@color/red"
        android:layout_margin="5dp"
        android:id="@+id/recycler_row_yorum_text"
        >
    </TextView>



</LinearLayout>